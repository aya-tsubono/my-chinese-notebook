<div class='new-account'>
  <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <div class='form-header-text'>
        ログイン
      </div>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class='btn-contents'>
      <%= f.submit "ログイン" ,class:"btn btn--green btn--radius" %>
    </div>
  </div>
  <% end %>
  <div class='registration-content'>
    <div class="form-group">
      <h2 class='form-bottom-text'>
        ↓まだ登録していない方↓
      </h2>
    </div>
    <%= link_to "新規登録はこちら", new_user_registration_path, class: "btn btn--green btn--radius" %>
  </div>
</div>

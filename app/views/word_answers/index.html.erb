<%= render "shared/header" %>

<%# 単語テスト %>
<div class='main'>
  <div class='main-inner'>
    <div class='main-title'>
      <span>単語テスト</span>
    </div>
    <br><br><br>
    <div class='contents-select'>
      <div class='question-content'>
        <div class='question-title'>
          問題
        </div>
        <div class='question-text'>
          単語の意味：
        </div>
        <div class='question-word-text'>
          <%= @mean %>
        </div>
      </div>
      <div class='answer-content'>
        <div class='question-title'>
          解答
        </div>
        <div class='answer-text'>
          答え：
        </div>
        <div class='answer-word-text'>
          <%= @name %>
        </div>
        <div class='correct-contents'>
          <%= button_to "正解", {controller: 'word_answers', action: 'index'}, {method: :post, params: {w_correct: '1', w_incorrect: '0', word_id: @word_id, user_id: current_user.id}, class: "btn btn--orange btn--cubic"} %>
          <%= button_to "不正解", {controller: 'word_answers', action: 'index'}, {method: :post, params: {w_correct: '0', w_incorrect: '1', word_id: @word_id, user_id: current_user.id}, class: "btn btn--orange btn--cubic"} %>
        </div>
      </div>
    </div>  
  </div>
</div>
<%# //単語テスト %>

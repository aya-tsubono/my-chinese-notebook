<%= render "shared/header" %>

<%# 単語テスト %>
<div class='main'>
  <div class='main-inner'>
    <div class='main-title'>
      <span>単語テスト</span>
    </div>
    <br><br><br>
    <div class='contents-select'>
      <div class='question-content'>
        <div class='question-title'>
          問題
        </div>
        <div class='question-text'>
          単語の意味：
        </div>
        <div class='question-word-text'>
          <%= @mean %>
        </div>
      </div>
      <div class='answer-content'>
        <div class='question-title'>
          解答
        </div>
        <div class='answer-text'>
          答え：
        </div>
        <div class='answer-word-text'>
          <%= @name %>
        </div>

<%# //正解ボタン %>
      <div class='submit-content'>
        <%=form_with model: @word_answer, local: true do |f|%>
          <input name="word_answer[w_correct]" type="hidden" value=<%= 1 %>>
          <input name="word_answer[w_incorrect]" type="hidden" value=<%= 0 %>>
          <input name="word_answer[user_id]" type="hidden" value=<%= current_user.id %>>
          <input name="word_answer[word_id]" type="hidden" value=<%= @word_id %>>
          <div class='word_answer-form-center'>
            <%= f.submit "正解", class: 'correct-btn'%>
          </div>
        <% end %>
      </div>  
<%# //正解ボタン %>
<%# //不正解ボタン %>
      <div class='submit-content'>
        <%=form_with model: @word_answer, local: true do |f|%>
          <input name="word_answer[w_correct]" type="hidden" value=<%= 0 %>>
          <input name="word_answer[w_incorrect]" type="hidden" value=<%= 1 %>>
          <input name="word_answer[user_id]" type="hidden" value=<%= current_user.id %>>
          <input name="word_answer[word_id]" type="hidden" value=<%= @word_id %>>
          <div class='word_answer-form-center'>
            <%= f.submit "不正解", class: 'correct-btn'%>
          </div>
        <% end %>
      </div>  
<%# //不正解ボタン %>
      </div>
    </div>  
  </div>
</div>
<%# //単語テスト %>

<%= render "shared/header" %>

<div class="register-main">
  <div class="register-inner">
    <div class="page-heading">単語の編集</div>    
    <div class="form__wrapper">
      <%= form_with model: @word, class: 'register-form', local: true do |f|%>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :words_name, "単語" %>
          <span class="indispensable">必須</span><br />
          <%= f.text_field :words_name, id:"words_name", class:"text-form" %>
        </div>
        <div class="field">
          <%= f.label :words_meaning, "単語の意味" %>
          <span class="indispensable">必須</span><br />
          <%= f.text_field :words_meaning, id:"words_meaning", class:"text-form" %>
        </div>
        <div class="field">
          <%= f.label :words_pronunciation, "単語の発音" %>
          <span class="indispensable">必須</span><br />
          <%= f.text_field :words_pronunciation, id:"words_pronunciation", class:"text-form" %>
        </div>
        <div class="actions">
          <%= f.submit "登録", class: "btn btn--purple btn--radius" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
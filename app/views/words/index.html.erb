<%= render "shared/header" %>

<%# word一覧 %>
<div class='index-main'>
  <div class='index-inner'>
      <div class="page-heading">単語の一覧</div>
      <div class="index-link">
      <%= link_to "例文の一覧", sentences_path, class:"btn btn--index btn--cubic" %>
      </div>
    <div class="index-lists">
      <% @words.each do |word| %>
        <li class="post-link">
          <%= "・" %>
          <%= link_to word.words_name, edit_word_path(word) %>
        </li>
      <% end %>
      <div class="no-post-text">
        <% if @words.length == 0 %>
        <%= "まだ投稿がありません" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%# //word一覧 %>

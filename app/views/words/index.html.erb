<%# ヘッダー %>
<header class='top-page-header'>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname+"さんの MyPage", user_path(current_user), class: "btn btn-border-shadow btn-border-shadow--color" %></li>
      <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-border-shadow btn-border-shadow--color" %></li>
      <% else %>
      <li><%= link_to 'Login', user_session_path, class: "btn btn-border-shadow btn-border-shadow--color" %></li>
      <% end %>
    </ul>
  </div>
</header>
<%# //ヘッダー %>

<%# メイン画面 %>
<div class='main'>
  <div class='main-inner'>
    <div class='main-title'>
      <span>中国語勉強アプリ</span>
    </div>
    <br><br><br>
    <div class='contents-select'>
      <div class='register-select'>
        <div class='select-text'>
          登録
        </div>
        <div class='select-links'>
          <%= link_to "単語の登録", new_word_path, class:"btn btn--orange btn--cubic" %>
          <%= link_to "例文の登録", new_sentence_path, class:"btn btn--orange btn--cubic" %>
        </div>
      </div>
      <div class='test-select'>
        <div class='select-text'>
          テスト
        </div>
        <div class='select-links'>
          <%= link_to "単語テスト", root_path, class:"btn btn--orange btn--cubic" %>
          <%= link_to "単語の意味テスト", root_path, class:"btn btn--orange btn--cubic" %>
          <%= link_to "例文の筆記テスト", root_path, class:"btn btn--orange btn--cubic" %>
          <%= link_to "例文の意味テスト", root_path, class:"btn btn--orange btn--cubic" %>
        </div>
      </div>
    </div>  
  </div>
</div>
<%# //メイン画面 %>
